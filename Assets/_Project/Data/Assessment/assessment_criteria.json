    "technique": {
      "id": "technique",
      "name": "Laboratory Technique",
      "description": "Proper use of laboratory equipment and procedures",
      "weight": 0.25,
      "maxScore": 10,
      "subcriteria": [
        {
          "name": "Equipment Handling",
          "description": "Proper handling and use of laboratory equipment",
          "maxScore": 2.5,
          "levels": {
            "excellent": {
              "score": 2.5,
              "description": "Perfect equipment handling with no errors"
            },
            "good": {
              "score": 2.0,
              "description": "Good equipment handling with minor errors"
            },
            "satisfactory": {
              "score": 1.5,
              "description": "Adequate equipment handling with some errors"
            },
            "poor": {
              "score": 1.0,
              "description": "Poor equipment handling with many errors"
            },
            "fail": {
              "score": 0.0,
              "description": "Unsafe or incorrect equipment handling"
            }
          }
        },
        {
          "name": "Procedure Following",
          "description": "Following experimental procedures correctly",
          "maxScore": 2.5,
          "levels": {
            "excellent": {
              "score": 2.5,
              "description": "Follows all procedures perfectly"
            },
            "good": {
              "score": 2.0,
              "description": "Follows most procedures with minor deviations"
            },
            "satisfactory": {
              "score": 1.5,
              "description": "Follows basic procedures with some errors"
            },
            "poor": {
              "score": 1.0,
              "description": "Frequently deviates from procedures"
            },
            "fail": {
              "score": 0.0,
              "description": "Does not follow procedures at all"
            }
          }
        },
        {
          "name": "Time Management",
          "description": "Efficient use of laboratory time",
          "maxScore": 2.5,
          "levels": {
            "excellent": {
              "score": 2.5,
              "description": "Completes experiment efficiently within time limit"
            },
            "good": {
              "score": 2.0,
              "description": "Completes experiment with minor time overrun"
            },
            "satisfactory": {
              "score": 1.5,
              "description": "Completes experiment with moderate time overrun"
            },
            "poor": {
              "score": 1.0,
              "description": "Significant time overrun"
            },
            "fail": {
              "score": 0.0,
              "description": "Does not complete experiment in time"
            }
          }
        },
        {
          "name": "Organization",
