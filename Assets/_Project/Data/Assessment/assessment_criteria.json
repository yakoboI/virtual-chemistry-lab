    "accuracy": {
      "id": "accuracy",
      "name": "Accuracy and Precision",
      "description": "Accuracy and precision of experimental results",
      "weight": 0.30,
      "maxScore": 10,
      "subcriteria": [
        {
          "name": "Measurement Accuracy",
          "description": "Accuracy of measurements and readings",
          "maxScore": 3.0,
          "levels": {
            "excellent": {
              "score": 3.0,
              "description": "All measurements within 1% of expected values"
            },
            "good": {
              "score": 2.4,
              "description": "Most measurements within 2% of expected values"
            },
            "satisfactory": {
              "score": 1.8,
              "description": "Measurements within 5% of expected values"
            },
            "poor": {
              "score": 1.2,
              "description": "Measurements within 10% of expected values"
            },
            "fail": {
              "score": 0.0,
              "description": "Measurements more than 10% from expected values"
            }
          }
        },
        {
          "name": "Result Precision",
          "description": "Consistency of repeated measurements",
          "maxScore": 3.0,
          "levels": {
            "excellent": {
              "score": 3.0,
              "description": "Standard deviation less than 1%"
            },
            "good": {
              "score": 2.4,
              "description": "Standard deviation less than 2%"
            },
            "satisfactory": {
              "score": 1.8,
              "description": "Standard deviation less than 5%"
            },
            "poor": {
              "score": 1.2,
              "description": "Standard deviation less than 10%"
            },
            "fail": {
              "score": 0.0,
              "description": "Standard deviation more than 10%"
            }
          }
        },
        {
          "name": "Calculation Accuracy",
          "description": "Accuracy of calculations and data processing",
          "maxScore": 2.0,
          "levels": {
            "excellent": {
              "score": 2.0,
              "description": "All calculations correct"
            },
            "good": {
              "score": 1.6,
              "description": "Most calculations correct with minor errors"
            },
            "satisfactory": {
              "score": 1.2,
              "description": "Basic calculations correct with some errors"
            },
            "poor": {
              "score": 0.8,
              "description": "Many calculation errors"
            },
            "fail": {
              "score": 0.0,
              "description": "Major calculation errors"
            }
          }
        },
        {
          "name": "Data Recording",
          "description": "Accuracy and completeness of data recording",
          "maxScore": 2.0,
          "levels": {
            "excellent": {
              "score": 2.0,
              "description": "Complete and accurate data recording"
