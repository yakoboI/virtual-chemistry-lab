        },
        {
          "id": "graduated_cylinder",
          "name": "Graduated Cylinder",
          "capacity": 100.0,
          "unit": "mL"
        },
        {
          "id": "magnetic_stirrer",
          "name": "Magnetic Stirrer",
          "speed_range": [0, 1000],
          "unit": "rpm"
        }
      ],
      "procedure": {
        "steps": [
          {
            "stepNumber": 1,
            "title": "Prepare Solutions",
            "description": "Prepare 1M HCl and 1M NaOH solutions",
            "instructions": "Measure 50mL of 1M HCl and 50mL of 1M NaOH. Record initial temperatures.",
            "expectedDuration": 15,
            "validation": {
              "type": "solution_preparation",
              "parameters": {
                "concentrations": [1.0, 1.0],
                "volumes": [50.0, 50.0]
              }
            }
          },
          {
            "stepNumber": 2,
            "title": "Setup Calorimeter",
            "description": "Add HCl solution to calorimeter and measure temperature",
            "instructions": "Add 50mL HCl to calorimeter. Measure and record temperature.",
            "expectedDuration": 10,
            "validation": {
              "type": "temperature_measurement",
              "parameters": {
                "temperature_range": [20, 30],
                "stability_time": 60
              }
            }
          },
          {
            "stepNumber": 3,
            "title": "Add NaOH Solution",
            "description": "Add NaOH solution and monitor temperature change",
