            "validation": {
              "type": "temperature_monitoring",
              "parameters": {
                "monitoring_interval": 15,
                "duration": 300
              }
            }
          },
          {
            "stepNumber": 5,
            "title": "Calculate Heat of Reaction",
            "description": "Calculate enthalpy of neutralization",
            "instructions": "Use q = mcΔT to calculate heat released. Convert to kJ/mol.",
            "expectedDuration": 10,
            "validation": {
              "type": "enthalpy_calculation",
              "parameters": {
                "expected_range": [-55, -65],
                "unit": "kJ/mol",
                "accuracy": 0.90
              }
            }
          }
        ]
      },
      "expectedResults": {
        "heatOfNeutralization": -57.3,
        "unit": "kJ/mol",
        "temperatureRise": 6.8,
        "unit_temp": "°C",
        "heatReleased": 1425.0,
        "unit_heat": "J",
        "percentError": 3.0
      },
      "calculations": [
        {
          "type": "heat_calculation",
          "formula": "q = mcΔT",
          "description": "Calculate heat absorbed by solution"
        },
        {
          "type": "moles_calculation",
          "formula": "n = c × V",
          "description": "Calculate moles of acid/base used"
        },
        {
          "type": "enthalpy_calculation",
          "formula": "ΔH = q / n",
          "description": "Calculate enthalpy change per mole"
        },
        {
          "type": "theoretical_comparison",
          "formula": "Percent Error = |Experimental - Theoretical| / Theoretical × 100",
          "description": "Compare with theoretical value"
