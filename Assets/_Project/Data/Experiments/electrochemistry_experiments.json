      "procedure": {
        "steps": [
          {
            "stepNumber": 1,
            "title": "Prepare Solutions",
            "description": "Prepare 1M solutions of zinc sulfate and copper sulfate",
            "instructions": "Dissolve appropriate amounts of ZnSO₄ and CuSO₄ in separate beakers with 100mL distilled water.",
            "expectedDuration": 15,
            "validation": {
              "type": "solution_preparation",
              "parameters": {
                "concentrations": [1.0, 1.0],
                "volumes": [100, 100]
              }
            }
          },
          {
            "stepNumber": 2,
            "title": "Setup Galvanic Cell",
            "description": "Construct the galvanic cell with salt bridge",
            "instructions": "Place Zn electrode in ZnSO₄ solution and Cu electrode in CuSO₄ solution. Connect with salt bridge.",
            "expectedDuration": 20,
            "validation": {
              "type": "cell_assembly",
              "parameters": {
                "electrodes": ["zinc", "copper"],
                "solutions": ["zinc_sulfate", "copper_sulfate"]
              }
            }
          },
          {
            "stepNumber": 3,
            "title": "Measure Cell Potential",
            "description": "Measure the voltage of the galvanic cell",
            "instructions": "Connect voltmeter to electrodes and record cell potential. Measure over time.",
            "expectedDuration": 30,
            "validation": {
              "type": "voltage_measurement",
              "parameters": {
                "expected_range": [1.0, 1.2],
                "tolerance": 0.1
              }
            }
          },
          {
            "stepNumber": 4,
            "title": "Observe Reactions",
            "description": "Observe changes at electrodes and in solutions",
            "instructions": "Monitor color changes, gas evolution, and electrode appearance over time.",
            "expectedDuration": 15,
            "validation": {
              "type": "reaction_observation",
              "parameters": {
                "expected_changes": ["zinc_dissolution", "copper_deposition"]
              }
            }
          },
          {
            "stepNumber": 5,
            "title": "Calculate Standard Potential",
            "description": "Calculate theoretical cell potential and compare with measured value",
            "instructions": "Use standard reduction potentials to calculate E°cell and compare with measured value.",
            "expectedDuration": 10,
            "validation": {
              "type": "potential_calculation",
              "parameters": {
                "theoretical_value": 1.10,
                "accuracy": 0.95
              }
            }
          }
        ]
      },
      "expectedResults": {
        "cellPotential": 1.10,
        "unit": "V",
        "zincOxidation": "Zn → Zn²⁺ + 2e⁻",
        "copperReduction": "Cu²⁺ + 2e⁻ → Cu",
        "overallReaction": "Zn + Cu²⁺ → Zn²⁺ + Cu",
        "colorChanges": {
          "zinc_solution": "clear to colorless",
          "copper_solution": "blue to lighter blue"
        }
      },
      "calculations": [
        {
          "type": "standard_cell_potential",
          "formula": "E°cell = E°cathode - E°anode",
          "description": "Calculate standard cell potential using reduction potentials"
        },
        {
          "type": "nernst_equation",
          "formula": "E = E° - (RT/nF)lnQ",
          "description": "Calculate cell potential under non-standard conditions"
        },
        {
          "type": "gibbs_free_energy",
          "formula": "ΔG = -nFE",
          "description": "Calculate Gibbs free energy change for the cell reaction"
        }
